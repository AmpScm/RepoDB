<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
    <Version>0.0.4</Version>
    <FileVersion>0.0.4</FileVersion>
    <AssemblyVersion>0.0.4</AssemblyVersion>
    <Description>An extension library that contains the official Bulk Operations of RepoDb for PostgreSQL.</Description>
    <RepositoryUrl>https://github.com/mikependon/RepoDb/tree/master/RepoDb.Extensions/RepoDb.PostgreSql.BulkOperations</RepositoryUrl>
    <PackageTags>orm orm-framework orm-library hybrid-orm bulk bulk-operations</PackageTags>
    <PackageReleaseNotes>http://repodb.net/release/postgresqlbulk</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageProjectUrl>https://repodb.net/tutorial/get-started-postgresql</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Base\**" />
    <Compile Remove="Operations\BaseRepository\**" />
    <Compile Remove="Operations\DbRepository\**" />
    <EmbeddedResource Remove="Base\**" />
    <EmbeddedResource Remove="Operations\BaseRepository\**" />
    <EmbeddedResource Remove="Operations\DbRepository\**" />
    <None Remove="Operations\BaseRepository\**" />
    <None Remove="Operations\DbRepository\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Base\BinaryBulkDelete.cs" />
    <Compile Include="Base\BinaryBulkMerge.cs" />
    <Compile Include="Base\BinaryBulkUpdate.cs" />
    <Compile Include="Base\BinaryImport.cs" />
    <Compile Include="Base\BinaryBulkInsert.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="RepoDb" Version="1.12.10-beta1" />
    <PackageReference Include="RepoDb.PostgreSql" Version="1.1.5-beta1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\RepoDb.Core\RepoDb\RepoDb.csproj" />
    <ProjectReference Include="..\..\..\RepoDb.PostgreSql\RepoDb.PostgreSql\RepoDb.PostgreSql.csproj" />
  </ItemGroup>

</Project>
