<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>An extension library that contains the official Bulk Operations of RepoDb for SQL Server.</Description>
    <RepositoryUrl>https://github.com/mikependon/RepoDb/tree/master/RepoDb.Extensions/RepoDb.PostgreSql.BulkOperations</RepositoryUrl>
    <PackageTags>orm orm-framework orm-library hybrid-orm bulk bulk-operations</PackageTags>
    <PackageReleaseNotes>http://repodb.net/release/sqlserverbulk</PackageReleaseNotes>
    <Version>1.1.6-beta1</Version>
    <FileVersion>1.1.6.1</FileVersion>
    <AssemblyVersion>1.1.6.1</AssemblyVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Operations\**" />
    <Compile Remove="System.Data.SqlClient\**" />
    <EmbeddedResource Remove="Operations\**" />
    <EmbeddedResource Remove="System.Data.SqlClient\**" />
    <None Remove="Operations\**" />
    <None Remove="System.Data.SqlClient\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Base\BulkDelete.cs" />
    <Compile Remove="Base\BulkInsert.cs" />
    <Compile Remove="Base\BulkMerge.cs" />
    <Compile Remove="Base\BulkUpdate.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="RepoDb" Version="1.12.9" />
    <PackageReference Include="RepoDb.PostgreSql" Version="1.1.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\RepoDb.Core\RepoDb\RepoDb.csproj" />
    <ProjectReference Include="..\..\..\RepoDb.PostgreSql\RepoDb.PostgreSql\RepoDb.PostgreSql.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Base\" />
  </ItemGroup>

</Project>
